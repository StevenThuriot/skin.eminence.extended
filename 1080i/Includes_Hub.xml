    <include name="HubCategoriesNF">
        <control type="image">
            <width>widgethubrightw</width>
            <height>90</height>
            <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
        </control>
        <control type="image">
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>scale</aspectratio>
            <visible>IsEmpty(ListItem.Property(Color))</visible>
        </control>
        <control type="image">
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>scale</aspectratio>
            <visible>!IsEmpty(ListItem.Property(Color))</visible>
            <colordiffuse>PanelFG-NF</colordiffuse>
        </control>
        <control type="label">
            <posx>30r</posx>
            <posy>-16</posy>
            <width>270</width>
            <height>90</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>PanelFG-NF</textcolor>
            <label>$INFO[ListItem.Label]</label>
            <animation effect="slide" end="0,16" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
        </control>
        <control type="label">
            <posx>30r</posx>
            <posy>48</posy>
            <width>270</width>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>PanelFG</textcolor>
            <font>Font-ListInfo</font>
            <label>$INFO[ListItem.Label2]</label>
        </control>
    </include>
    <include name="HubCategoriesLayout">
        <itemlayout width="widgethubrightw" height="100">
            <include>HubCategoriesNF</include>
        </itemlayout>
        <focusedlayout width="widgethubrightw" height="100">
            <control type="group">
                <visible>!Control.HasFocus(9500)</visible>
                <include>HubCategoriesNF</include>
            </control>
            <control type="group">
                <visible>Control.HasFocus(9500)</visible>
                <control type="image">
                    <width>widgethubrightw</width>
                    <height>90</height>
                    <texture colordiffuse="PosterHighlight">common/white.png</texture>
                        
                    <!--<animation condition="Container(9500).OnNext" reversible="false" effect="slide" start="0,-33" end="0,0" time="300" tween="back" easing="out">Focus</animation>
                    <animation condition="Container(9500).OnPrevious" reversible="false" effect="slide" start="0,33" end="0,0" time="300" tween="back" easing="out">Focus</animation>-->
                    
                </control>
                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
                    <visible>IsEmpty(ListItem.Property(Color))</visible>
                </control>
                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
                    <visible>!IsEmpty(ListItem.Property(Color))</visible>
                    <colordiffuse>Selected</colordiffuse>
                </control>
                <control type="label">
                    <posx>30r</posx>
                    <posy>-16</posy>
                    <width>270</width>
                    <height>90</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <textcolor>Selected</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <animation effect="slide" end="0,16" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                </control>
                <control type="label">
                    <posx>30r</posx>
                    <posy>48</posy>
                    <width>270</width>
                    <align>right</align>
                    <aligny>center</aligny>
                    <textcolor>Selected</textcolor>
                    <font>Font-ListInfo</font>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
        </focusedlayout>
        
    </include>
    <include name="HubMoveRight">
        <onright condition="SubString(Window(home).Property(librarynode),video)">ActivateWindow(Videos,$INFO[Window(home).Property(librarynode)],return)</onright>
        <onright condition="SubString(Window(home).Property(librarynode),musicdb)">ActivateWindow(Music,$INFO[Window(home).Property(librarynode)],return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-31-10)">ActivateWindowAndFocus(MyPVR,31,0,10,0)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-32-11)">ActivateWindowAndFocus(MyPVR,32,0,11,0)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-33-12)">ActivateWindowAndFocus(MyPVR,33,0,12,0)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-34-13)">ActivateWindowAndFocus(MyPVR,34,0,13,0)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-35-14)">ActivateWindowAndFocus(MyPVR,35,0,14,0)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),PVR-36-15)">ActivateWindowAndFocus(MyPVR,36,0,15,0)</onright>
