<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <constant name="bannerlistplot">838</constant>
    <include name="View_58_BannerList">
    
        <description>Banner List View (id=58)</description>
        <control type="group">
            <visible>Control.IsVisible(58)</visible>
            <include>Animation.ViewChange</include>     
            <include>DefSideLabel</include> 
              
            <control type="group">
                <posx>listx</posx>
                <posy>listy</posy>
                
                <control type="list" id="58">
                    <width>globalw</width>
                    <height>700</height>
                    <onright>9000</onright>
                    <onleft>60</onleft>
                    
                    <onup>58</onup>
                    <ondown>58</ondown>
                    <movement>2</movement>
                    <focusposition>1</focusposition>
                    <include>DefOnBack</include>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31223">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>

                    <itemlayout width="globalw" height="120">
              
                        <control type="group">
                            <posx>54r</posx>
                            <posy>34</posy>
                            <include>WatchedImage</include>
                        </control>
                        <control type="label">
                            <right>80</right>
                            <width>bannerlistplot</width>
                            <height>120</height>
                            <aligny>center</aligny>
                            <align>right</align>
                            <label>$INFO[ListItem.Label2]</label>
                            <font>Font-ListInfo-Small</font>
                        </control>
                        <control type="group">
                            <posx>26</posx>
                            <width>bannerlistplot</width>
                            <posy>globalpad</posy>
                            
                            <control type="label">
                                <width>798</width>
                                <height>44</height>
                                <aligny>top</aligny>
                                <label>$INFO[ListItem.Label]</label>
                                <font>Font-ListHeader</font>
                            </control>
                            <control type="label">
                                <posx>0</posx>
                                <posy>52</posy>
                                <width>bannerlistplot</width>
                                <height>50</height>
                                <aligny>top</aligny>
                                <label>$VAR[VARLabel3]</label>
                                <font>Font-ListInfo-Small</font>
                            </control>
                            
                        </control>
                    </itemlayout>
                    
                    <focusedlayout width="globalw" height="340">
                        <control type="group">
                            <visible>Skin.HasSetting(list.highlight)</visible>
                            <control type="image">
                                <width>globalw</width>
                                <height>330</height>
                                <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
                                <aspectratio>stretch</aspectratio>
                                <visible>Control.HasFocus(58)</visible>
                            </control>
                            <control type="image">
                                <width>8</width>
                                <height>330</height>
                                <texture colordiffuse="PosterHighlight">common/white.png</texture>
                                <aspectratio>stretch</aspectratio>
                                <visible>Control.HasFocus(58)</visible>
                            </control>
                        </control>
                        
                        <control type="image">
                            <visible>!Skin.HasSetting(list.highlight)</visible>
                            <width>globalw</width>
                            <height>330</height>
                            <texture colordiffuse="PosterHighlight" border="5">common/white.png</texture>
                            <aspectratio>stretch</aspectratio>
                            <visible>Control.HasFocus(58)</visible>
                        </control>
                        
                        <control type="image">
                            <width>1448</width>
                            <height>330</height>
                            <texture border="5" colordiffuse="PosterBorder">common/border-inner.png</texture>
                            <aspectratio>stretch</aspectratio>
                            <visible>!Control.HasFocus(58)</visible>
                        </control>
                        <control type="image">
                            <right>globalpad</right>
                            <posy>globalpad</posy>
                            <width>551</width>
                            <height>310</height>
                            <texture>$VAR[FanartImage]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                        
                        
                        <control type="group">
                            <posx>26</posx>
                            <width>bannerlistplot</width>
                            <posy>globalpad</posy>
                            <control type="group">
                                <posx>44r</posx>
                                <include>WatchedImage</include>
                            </control>
                            <control type="label">
                                <left>0</left>
                                <right>60</right>
                                <height>44</height>
                                <aligny>top</aligny>
                                <label>$INFO[ListItem.Label]</label>
                                <font>Font-ListHeader</font>
                                <textcolor>Selected</textcolor>
                            </control>
                            <control type="label">
                                <posy>52</posy>
                                <width>bannerlistplot</width>
                                <height>50</height>
                                <aligny>top</aligny>
                                <label>$VAR[VARLabel3]</label>
                                <font>Font-ListInfo-Small</font>
                                <textcolor>Selected</textcolor>
                            </control>
                            <control type="label">
                                <right>0</right>
                                <posy>60r</posy>
                                <width>bannerlistplot</width>
                                <align>right</align>
                                <height>50</height>
                                <aligny>top</aligny>
                                <label>$INFO[ListItem.Label2]</label>
                                <font>Font-ListInfo-Small</font>
                                <textcolor>Selected</textcolor>
                            </control>
                            <control type="textbox">
                                <posy>102</posy>
                                <width>bannerlistplot</width>
                                <height>160</height>
                                <label>$INFO[ListItem.Plot]</label>
                                <font>Font-ListInfo</font>
                                <align>justify</align>
                                <textcolor>Selected</textcolor>
                            </control>
                        </control>
                        
                    </focusedlayout>

                </control>
                <control type="scrollbar" id="60">
                    <posx>-26</posx>
                    <posy>0</posy>
                    <height>globalh</height>
                    <include>DefScrollBarMove</include>
                    <animation effect="fade" start="100" end="25" time="100" condition="!Control.HasFocus(60)">Conditional</animation>
                    <animation effect="fade" start="100" end="0" condition="ControlGroup(9000).HasFocus()">Conditional</animation>
                    <animation effect="fade" start="100" end="25" condition="[!IntegerGreaterThan(Container.NumPages,1) + !Control.HasFocus(60)]">Conditional</animation>
                </control>    
            </control>
        </control>

    </include>

</includes>
